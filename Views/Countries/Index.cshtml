@model IEnumerable<xilopro2.Data.Entities.Country>

@{
    ViewData["Title"] = "Index";

}

<div class="container pt-4">
    <div class="row croles">
        <partial name="_Notifications">
            <div class="col-md-12">
                <div class="card ">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h3 class="panel-title">Paises</h3>
                        <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Crear Nuevo País</a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                        <table class="table table-hover table-striped" id="TablaPaises">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Country_Name)
                                    </th>
                                    <th>
                                        #  @Html.DisplayNameFor(model => model.StatesNumber)
                                    </th>
                                    <th class="text-end">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr>

                                        <td style="vertical-align: middle;">
                                            <a asp-action="Details" asp-route-id="@item.Country_ID" class="rowclick text-uppercase">
                                                @Html.DisplayFor(modelItem => item.Country_Name)
                                            </a>
                                        </td>
                                            <td style="vertical-align: middle;" class="text-center">
                                            @Html.DisplayFor(modelItem => item.StatesNumber)
                                        </td>
                                        <td class="text-end" style="text-align:right!important" >
                                                <div class="btn-group">
                                            <a asp-action="Edit" asp-route-id="@item.Country_ID" class="btn btn-warning"><i class="fa-regular fa-pen-to-square"></i> Editar</a> 

                                            <a asp-action="Delete" asp-route-id="@item.Country_ID" class="btn btn-danger"><i class="fa-solid fa-delete-left"></i> Borrar</a>
                                            </div>
                                        </td>

                                    </tr>

                                }
                            </tbody>
                        </table>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script type="text/javascript">
        $(document).ready(function () {
            $('#TablaPaises').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.12.1/i18n/es-MX.json"
                },
                "aLengthMenu": [
                    [5, 25, 50, 100, 200, -1],
                    [5, 25, 50, 100, 200, "Todos"]
                ]
            })
        })
    </script>
}

