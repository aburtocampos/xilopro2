@model xilopro2.Models.CityViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container pt-3">
    <div class="d-flex justify-content-between align-items-center gap-2">
        <a asp-action="DetailsState" asp-route-id="@Model.StateId" class="btn btn-outline-dark"><i class="fa-solid fa-arrow-left"></i> Atras</a>
        <h3 class="m-0 text-end">Editando el Municipio: <span class="badge bg-warning text-black">@Model.City_Name</span>del Departamento de @Model.StateName</h3>
    </div>

    <hr />
    <div class="card border-warning" style="width: 100%;margin:0 auto;">
        <form asp-action="EditCity">
            <div class="card-body">
                <div class="col-md-12">

                    <partial name="_FormCity" />

                </div>
            </div>
            <div class="card-footer card-footer-warning">
                <div class="form-group my-2 d-flex justify-content-between">
                    <a asp-action="DetailsState" asp-route-id="@Model.StateId" class="btn btn-outline-default"><i class="fa-solid fa-ban"></i> Cancelar</a>
                    <button type="submit" value="Save" class="btn btn-warning"><i class="fa-regular fa-floppy-disk"></i> Guardar</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}