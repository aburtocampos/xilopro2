@model xilopro2.Data.Entities.Country

@{
    ViewData["Title"] = "Create";
}


<div class="container pt-3">
    <div class="d-flex justify-content-between align-items-center gap-2">
        <a asp-action="Index" class="btn btn-outline-dark"><i class="fa-solid fa-arrow-left"></i> Atras</a>
        <h3 class="m-0 text-end">Creando Nuevo País</h3>
    </div>
    <hr />

    <form class="card border-primary" style="width: 100%;margin:0 auto;" asp-action="Create">
        <div class="card-body">
            <div class="col-md-12">

                <partial name="_FormCountry" />

            </div>
        </div>
        <div class="card-footer card-footer-primary">
            <div class="form-group my-2 d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-light"><i class="fa-solid fa-ban"></i> Cancelar</a>
                <button type="submit" value="Save" class="btn btn-primary"><i class="fa-regular fa-floppy-disk"></i> Guardar</button>
            </div>
        </div>
    </form>

</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
