@model xilopro2.Data.Entities.State

@{
    ViewData["Title"] = "Delete";
}

<div class="container pt-3">
    <div class="d-flex justify-content-between align-items-center gap-2">
        <a asp-action="DetailsState" asp-route-id="@Model.Country.Country_ID" class="btn btn-outline-dark"><i class="fa-solid fa-arrow-left"></i> Atras</a>
        <h3 class="m-0 text-end">Eliminando el Departamento: <span class="badge bg-danger text-white text-uppercase">@Model.State_Name</span></h3>
    </div>
    <hr />
    <div class="card border-danger" style="width: 100%;margin:0 auto;">
        <div class="card-body">
            <h2 class="text-center">Confirme eliminar el Departamento: <span class="text-danger">@Model.State_Name</span> ?</h2>
           
        </div>
        <div class="card-footer card-footer-danger">
            <form asp-action="DeleteState">
                <div class="form-group my-2 d-flex justify-content-between">
                    <input type="hidden" asp-for="State_ID" />
                    <a asp-action="DetailsState" asp-route-id="@Model.Country.Country_ID" class="btn btn-light"><i class="fa-solid fa-ban"></i> Cancelar</a>
                    <button type="submit" value="Borrar" class="btn btn-danger"><i class="fa-solid fa-delete-left"></i> Eliminar</button>
                </div>
            </form>
        </div>   
    </div>
</div>