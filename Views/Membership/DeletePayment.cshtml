@model xilopro2.Models.PaymentViewModel
@{
    ViewData["Title"] = "DeletePayment";
}

<div class="container pt-3">

    <div class="d-flex justify-content-between align-items-center gap-2">
        <a asp-action="Details" asp-route-id="@Model?.ID" asp-controller="Membership" class="btn btn-outline-dark"><i class="fa-solid fa-arrow-left"></i> Atras</a>
        <h3 class="m-0 text-end">Eliminando pago de <span class="badge bg-danger text-white text-uppercase">@Model.MembershipFullName</span></h3>
    </div>
    <hr />
    <div class="card border-danger" style="width: 100%;margin:0 auto;">
        <div class="card-body">
            <h2 class="text-center mb-3">Confirme eliminar el pago de <span class="text-danger">@Model.MembershipFullName</span> ?</h2>
            <div class="col membresiastilo">
                <div class="form-group mb-2">
                    <label class="control-label">Fecha:</label>
                    <p class="text-danger text-uppercase fw-bold mb-0"> @Model.PaymentDate</p>
                </div>
                <div class="form-group mb-2">
                    <label class="control-label">Monto:</label>
                    <p class="text-danger text-uppercase fw-bold mb-0"> @Model.PaymentAmount</p>
                </div>
                <div class="form-group mb-2">
                    <label class="control-label">Tipo de pago:</label>
                    <p class="text-danger text-uppercase fw-bold mb-0"> @Model.PaymentMethod</p>
                </div>
                <div class="form-group mb-2">
                    <label class="control-label">Estado del pago:</label>
                    <p class="text-danger text-uppercase fw-bold mb-0"> @Model.PaymentStatus</p>
                </div>
            </div>
        </div>
        <div class="card-footer card-footer-danger">
            <form asp-action="DeletePayment">
                <div class="form-group d-flex justify-content-between">
                    <a asp-action="Details" asp-route-id="@Model?.ID" asp-controller="Membership" class="btn btn-light"><i class="fa-solid fa-ban"></i> Cancelar</a>
                    <button type="submit" value="Borrar" class="btn btn-danger"><i class="fa-solid fa-delete-left"></i> Eliminar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


