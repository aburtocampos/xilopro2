@model OlvidoPasswordViewModel
@{
	ViewData["Title"] = "Olvido su contraseña";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/ForgetPassword.css" />
<section class="forgetpassword">
	<div class="">
		<div class="centrarForgetPassword row">
			<div class="card">
				<div class="card-body">
					<h3 class="card-title text-center">Resetear Contraseña</h3>
					<form asp-controller="Account" asp-action="ForgetPassword" method="post" role="form">

						<div class="text-danger" asp-validation-summary="All"></div>

						<div class="row mt-4">
							<div class="col-sm-3 offset-sm-9 mx-auto">

								<div class="mb-3">
									<label asp-for="Email" class="col-md-2"></label>
									<input asp-for="Email" class="form-control inlogin" placeholder="Email" />
									<span class="text-danger" asp-validation-for="Email"></span>
								</div>

								<button type="submit" class="btn btn-success inlogin w-100 btn-lg">Resetear contraseña</button>
								<a href="/" class="btn btn-light btn-lg w-100">Cancelar</a>
							</div>

						</div>

					</form>
				</div>
			</div>
		</div>
	</div>
</section>




@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}