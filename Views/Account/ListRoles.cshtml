@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Roles";
}

<div class="container pt-3">
    <partial name="_Notifications">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading d-flex justify-content-between align-content-center mb-2">
                    <h3 class="panel-title">Roles</h3>
                        <a asp-action="CreateRole" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Crear Nuevo Rol</a>
                </div>
                <hr />
                <div class="panel-body">
                   
                    <table class="table table-hover table-responsive table-striped" id="tblRoles">
                        <thead>
                            <tr>

                                <th>
                                
                                    Codigo de Rol:
                                </th>
                                <th>
                                   Nombre del Rol:
                                </th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                 if (item.Name == "Admin") {

                                    }
                                    else {
                                <tr>
                                    <td style="vertical-align: middle;">
                                       
                                            @Html.DisplayFor(modelItem => item.Id)
                                       
                                    </td>
                                    <td style="vertical-align: middle;text-transform:uppercase;">
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td class="text-end">
                                        <a asp-action="EditRole" class="btn btn-warning" asp-route-id="@item.Id"><i class="fa-regular fa-pen-to-square"></i> <span class="d-none d-sm-inline-block">Editar</span></a> |
                                        <a asp-action="DeleteRole" class="btn btn-danger" asp-route-id="@item.Id"><i class="fa-solid fa-delete-left"></i> <span class="d-none d-sm-inline-block">Eliminar</span></a>
                                    </td>
                                </tr>
                                }
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
</div>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblRoles').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.12.1/i18n/es-MX.json"
                },
                "aLengthMenu": [
                    [5, 25, 50, 100, 200, -1],
                    [5, 25, 50, 100, 200, "Todos"]
                ]
            })
        })

    </script>
}
