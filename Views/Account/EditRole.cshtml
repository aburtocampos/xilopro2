@using Microsoft.AspNetCore.Identity
@model IdentityRole

@{
    ViewData["Title"] = "Edit";
}


<div class="container pt-2">
    <h2><a asp-action="ListRoles" class="btn btn-outline-default"><i class="fa-solid fa-arrow-left"></i> Atras</a> | Editando el Rol: <span class="badge bg-warning text-dark">@Model.Name</span> </h2>

    <hr />
    <div class="card border-warning" style="width: 50%;margin:0 auto;">
        <form asp-action="EditRole">
            <div class="card-body">
                <div class="row">
                    <input type="hidden" asp-for="Id" />
                    <partial name="_FormRoles" />
                </div>
            </div>
            <div class="card-footer card-footer-warning">
                <div class="form-group d-flex justify-content-between">
                    <a asp-action="ListRoles" class="btn btn-outline-default"><i class="fa-solid fa-ban"></i> Cancelar</a>
                    <button type="submit" value="Save" class="btn btn-warning"><i class="fa-regular fa-floppy-disk"></i> Guardar</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
