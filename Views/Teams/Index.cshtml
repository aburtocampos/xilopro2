@model IEnumerable<xilopro2.Data.Entities.Team>

@{
    ViewData["Title"] = "Equipos";
    var path = "/Content/Teams/";
}

<div class="container croles">
    <partial name="_Notifications">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading d-flex justify-content-between align-content-center mb-4 ">
                    <h3 class="panel-title">Equipos</h3>
                    <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Crear Nuevo Equipo</a>
                </div>
                <hr />
                <div class="panel-body">
                    <table class="table table-hover table-responsive table-striped" id="tblEquipos">
                        <thead>
                            <tr>

                                <th>
                                    @Html.DisplayNameFor(model => model.Team_Image)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Team_Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Team_Estadio)
                                </th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td style="vertical-align: middle;" class="imgZoom">

                                        <img src="@(!string.IsNullOrEmpty(item.Team_Image) ? Url.Content(path+item.Team_Image) : Url.Content("~/images/noimage.png"))" alt="Image" />

                                    </td>
                                    <td style="vertical-align: middle;">
                                        <a asp-action="Details" asp-route-id="@item.Team_ID" class="rowclick">
                                            @Html.DisplayFor(modelItem => item.Team_Name)
                                        </a>
                                    </td>
                                    <td style="vertical-align: middle;">

                                        @Html.DisplayFor(modelItem => item.Team_Estadio)

                                    </td>
                                    <td class="text-end">
                                        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Team_ID"><i class="fa-regular fa-pen-to-square"></i> Editar</a> |
                                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Team_ID"><i class="fa-solid fa-delete-left" onclick=""></i> Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblEquipos').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.12.1/i18n/es-MX.json"
                },
                "aLengthMenu": [
                    [5, 25, 50, 100, 200, -1],
                    [5, 25, 50, 100, 200, "Todos"]
                ]
            })
        })

    </script>
    <script type="text/javascript">
        function askDelete(e) {
            // e.preventDefault();
            Swal.fire({
                title: 'Confirmar Eliminación?',
                text: "No podras revertir este cambio!",
                icon: 'warning',
                allowOutsideClick: true,
                showCancelButton: true,
                iconColor: '#dc3545',
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'SI',
                cancelButtonText: 'NO',
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                        'Registro Eliminado!',
                    )
                }
            })
        }
    </script>

}