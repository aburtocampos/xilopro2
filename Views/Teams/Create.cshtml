@model xilopro2.Models.TeamViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="container pt-3">
    <div class="d-flex justify-content-between align-items-center gap-2">
        <a asp-action="Index" asp-controller="Teams" class="btn btn-outline-dark"><i class="fa-solid fa-arrow-left"></i> Atras</a>
        <h2 class="m-0 text-end">Creando Nuevo Equipo</h2>
    </div>
    <hr />
    <div class="card border-primary" style="width: 100%;margin:0 auto;">
        <form asp-action="Create" enctype="multipart/form-data">
            <div class="card-body">
                <div class="row">
                    <input type="hidden" asp-for="Team_Image" />
                    <partial name="_FormEquipos" />
                </div>
            </div>
            <div class="card-footer card-footer-primary">
                <div class="form-group d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-default"><i class="fa-solid fa-ban"></i> Cancelar</a>
                    <button type="submit" value="Save" class="btn btn-primary"><i class="fa-regular fa-floppy-disk"></i> Guardar</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
