@model xilopro2.Data.Entities.PlayerFiles

@{
    ViewData["Title"] = "Details";
    var path2 = "/Content/Files/";
}



<div class="container pt-3">
    <div class="d-flex justify-content-between align-items-center gap-2">
        <a asp-action="Details" asp-route-id="@Model?.PlayerId" class="btn btn-outline-dark"><i class="fa-solid fa-arrow-left"></i> Atras</a>
        <h2 class="m-0 text-end">Archivo: <span class="badge bg-dark text-white text-uppercase">@Model.PlayerFiles_Name</span> del Jugador <span class="badge bg-dark text-uppercase">@Model.Player.Player_FullName</span> </h2>
    </div>
    <hr />
    <div class="card border-secondary" style="width: 100%;margin:0 auto;">
        <div class="card-body">
            <div class="d-flex flex-column justify-content-center align-items-center">
                    <div class="d-flex flex-column justify-content-center align-items-center mt-4">
                        <span class="control-label fw-bold mb-2">Nombre:</span>
                        <h3>@Model.PlayerFiles_Name</h3>
                    </div>
                    <div class="form-group mt-4">
                        <span class="control-label d-flex fw-bold mb-2">Vista previa:</span>
                        @if (Model.PlayerFiles_Image.Contains(".pdf"))
                        {
                            //<i class="fa-solid fa-file-pdf" style=" font-size: 3.2rem;color: #000;"></i>
                            <embed id="viewpreview2" type="application/pdf" src="@(!string.IsNullOrEmpty(Model.PlayerFiles_Image) ? Url.Content(path2+Model.PlayerFiles_Image) : Url.Content("~/images/noimage.png"))" style="width:800px;max-width: 100%; height: 80vh;" />
                        }
                        else
                        {
                            <img src="@(!string.IsNullOrEmpty(Model.PlayerFiles_Image) ? Url.Content(path2+Model.PlayerFiles_Image) : Url.Content("~/images/noimage.png"))" alt="Image" class="rounded" style="width:350px;max-width: 100%; height: auto;" />
                        }
                    </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="form-group d-flex justify-content-between">
                <a asp-action="Details" asp-route-id="@Model?.PlayerId" class="btn btn-light"><i class="fa-solid fa-ban"></i> Cancelar</a>
                <div class="btn-group" >
                    <a asp-action="EditPlayerFiles" asp-route-id="@Model.PlayerFiles_ID" class="btn btn-warning"><i class="fa-regular fa-pen-to-square"></i> Editar</a>
                    <a asp-action="DeletePlayerFiles" asp-route-id="@Model.PlayerFiles_ID" class="btn btn-danger"><i class="fa-solid fa-delete-left"></i> Borrar</a>
                </div>
            </div>
        </div>
    </div>
</div>