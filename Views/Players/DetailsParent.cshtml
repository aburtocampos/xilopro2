@model xilopro2.Data.Entities.Parent

@{
    ViewData["Title"] = "Details";
    var path2 = "/Content/Files/";
    var path3 = "/Content/Parents/";
}

<div class="container pt-3">
    <div class="d-flex justify-content-between align-items-center gap-2">
        <a asp-action="Details" asp-route-id="@Model?.PlayerId" class="btn btn-outline-dark"><i class="fa-solid fa-arrow-left"></i> Atras</a>
        <h2 class="m-0 text-end">Tutor: <span class="badge bg-dark text-white text-uppercase">@Model.Parent_FullName</span> del Jugador <span class="badge bg-dark text-uppercase">@Model.Player.Player_FullName</span> </h2>
    </div>
    <hr />
    <div class="card border-secondary" style="width: 100%;margin:0 auto;">
        <div class="card-body">
            <div class="row">
                <div class="col-4">
                    <div class="form-group mt-2">
                        <span class="control-label d-flex fw-normal mb-2">Foto:</span>
                            <img src="@(!string.IsNullOrEmpty(Model.Parent_Image) ? Url.Content(path3+Model.Parent_Image) : Url.Content("~/images/noimage.png"))" alt="Image" class="rounded-3" style="width:350px;max-width: 100%; height: auto;" />
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group mt-2 mb-3">
                        <span class="control-label fw-normal mb-2">Nombre:</span>
                        <h3>@Model.Parent_FullName</h3>
                    </div>
                    <div class="form-group mt-2 mb-3">
                        <span class="control-label fw-normal mb-2">N° Cedula:</span>
                        <h3>@Model.Parent_Cedula</h3>
                    </div>
                    <div class="form-group mt-2 mb-3">
                        <span class="control-label fw-normal mb-2">N° Teléfono:</span>
                        <h3>@Model.PhoneNumber</h3>
                    </div>
                    <div class="form-group mt-2 mb-3">
                        <span class="control-label fw-normal mb-2">Lugar:</span>
                          <h3>@($"{ViewBag.Muni as string ?? ""}, {ViewBag.Depa as string ?? ""}")</h3>
                    </div>
                    <div class="form-group mt-2">
                        <span class="control-label fw-normal mb-2">Dirección:</span>
                        <h3>@Model.Parent_Address</h3>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group mt-2">
                        <span class="control-label d-flex fw-normal mb-2">Cedula:</span>
                        @if (Model.Parent_ImageCedula.Contains(".pdf"))
                        {
                        //<i class="fa-solid fa-file-pdf" style=" font-size: 3.2rem;color: #000;"></i>
                            <embed id="viewpreview2" type="application/pdf" src="@(!string.IsNullOrEmpty(Model.Parent_ImageCedula) ? Url.Content(path2+Model.Parent_ImageCedula) : Url.Content("~/images/noimage.png"))" style="width:800px;max-width: 100%; height: 80vh;" />
                        }
                        else
                        {
                            <img src="@(!string.IsNullOrEmpty(Model.Parent_ImageCedula) ? Url.Content(path2+Model.Parent_ImageCedula) : Url.Content("~/images/noimage.png"))" alt="Image" class="rounded" style="width:350px;max-width: 100%; height: auto;" />
                        }
                    </div>
                </div>
               
            </div>
        </div>
        <div class="card-footer">
            <div class="form-group d-flex justify-content-between">
                <a asp-action="Details" asp-route-id="@Model?.PlayerId" class="btn btn-light"><i class="fa-solid fa-ban"></i> Cancelar</a>
                <div class="btn-group" >
                    <a asp-action="EditParent" asp-route-id="@Model.Parent_ID" class="btn btn-warning"><i class="fa-regular fa-pen-to-square"></i> Editar</a>
                    <a asp-action="DeleteParent" asp-route-id="@Model.Parent_ID" class="btn btn-danger"><i class="fa-solid fa-delete-left"></i> Borrar</a>
                </div>
            </div>
        </div>
    </div>
</div>