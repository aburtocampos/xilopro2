                                                            @if ((item.PlayerFiles?.Count > 0) || (item.Parents?.Count > 0))
                                                            {
                                                                <i class="fa-solid fa-paperclip"></i>
                                                                
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <i class="fa-solid fa-thumbs-down text-danger"></i>
                                                            @if ((item.PlayerFiles?.Count > 0) || (item.Parents?.Count > 0))
                                                            {
                                                                <i class="fa-solid fa-paperclip"></i>
                                                                
                                                            }
                                                        }
                                                    </td>
