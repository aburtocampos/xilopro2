                                                                <span class="d-none d-md-inline-block">@((item.Player_Status ? "Dar Baja" : "Dar Alta"))</span>
                                                            </a>

                                                            @if (User.IsInRole("Admin"))
                                                            {
                                                                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Player_ID">
                                                                    <i class="fa-solid fa-delete-left"></i> <span class="d-none d-md-inline-block">Eliminar</span>
                                                                </a>
                                                            }
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>

