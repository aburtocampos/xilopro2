@model xilopro2.Models.ParentViewModel

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/User.css" asp-append-version="true" />

<div class="container pt-3">
    <div class="d-flex justify-content-between align-items-center gap-2">
        <a asp-action="Details" asp-route-id="@Model?.PlayerId" class="btn btn-outline-dark"><i class="fa-solid fa-arrow-left"></i> Atras</a>
        <h2 class="m-0 text-end">Creando Nuevo Tutor para <span class="badge bg-success text-uppercase">@Model.PlayerName</span></h2>
    </div>

    <hr />
    <div class="card border-success" style="width: 100%;margin:0 auto;">
        <form asp-action="AddParent" enctype="multipart/form-data">
            <div class="card-body">
                <div class="row">
                    <input type="hidden" asp-for="PlayerName" />
                    <partial name="_FormParent" />
                </div>
            </div>
            <div class="card-footer card-footer-success">
                <div class="form-group d-flex justify-content-between">
                    <a asp-action="Details" asp-route-id="@Model?.PlayerId" class="btn btn-light"><i class="fa-solid fa-ban"></i> Cancelar</a>
                    <button type="submit" value="Save" class="btn btn-success"><i class="fa-regular fa-floppy-disk"></i> Guardar</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}