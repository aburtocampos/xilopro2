<script src="~/lib/jquery/dist/jquery.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

@if (TempData["successPlayer"] != null)
{
    <script type="text/javascript">
        toastr.success('@TempData["successPlayer"]', "confirm");
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": false,
            "progressBar": true,
            "positionClass": "toast-bottom-center",
            "preventDuplicates": false,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
    </script>
}

@if (TempData["warningPlayer"] != null)
{
    <script type="text/javascript">
        toastr.warning('@TempData["warningPlayer"]');
    </script>
}

@if (TempData["errorPlayer"] != null)
{
    <script type="text/javascript">
           toastr.error('@TempData["errorPlayer"]');
    </script>
}