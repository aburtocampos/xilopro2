@model xilopro2.Data.Entities.Player

@{
    ViewData["Title"] = "Delete";
    var path = "/Content/Players/";
}



<div class="container pt-3">
   
    <div class="d-flex justify-content-between align-items-center gap-2">
        <a asp-action="Index" class="btn btn-outline-dark"><i class="fa-solid fa-arrow-left"></i> Atras</a>
        <h2 class="m-0 text-end">Eliminando Jugador: <span class="badge bg-danger text-white text-uppercase">@Model.Player_FullName</span></h2>
    </div>
    <hr />
    <div class="card border-danger" style="width: 100%;margin:0 auto;">
        
        <div class="card-header" >
            <h2 class="text-center ">Confirme eliminar al @(Model.Player_Genero == "Masculino" ? "Jugador" : "Jugadora"): <span class="text-danger text-uppercase">@Model.Player_FullName</span> ?</h2>
        </div>

        <div class="card-body">
            <div class="row">
               
                <div class="col-4">
                    <div class="form-group">
                        <img src="@(!string.IsNullOrEmpty(Model.Player_Image) ? Url.Content(path+Model.Player_Image) : Url.Content("~/images/noimage.png"))" class="img-fluid rounded imgpreviewForm3" alt="Image" />
                    </div>
                </div>
                <div class="col-8">
                    <div class="form-group mb-2">
                        <h3 class="form-check-label d-inline fw-bold">Dorsal:</h3>
                        <span class="text-danger my-2 fs-3 fw-bold">@Model.Player_Dorsal</span>
                    </div>
                    <div class="form-group mb-2">
                        <h3 class="form-check-label d-inline fw-bold">Posición:</h3>
                        <span class="text-danger my-2 fs-4 fw-bold">@Model.Position.Position_Name</span>
                    </div>
                    <div class="form-group mb-2">
                        @if (Enumerable.Count(ViewBag.CatNames) > 1)
                        {
                            <h3 class="control-label fw-bold">Categorias:</h3>
                        }
                        else
                        {
                            <h3 class="control-label fw-bold">Categoria:</h3>
                        }
                        <ul class="list-group list-group-flush">
                            @foreach (var nombre in ViewBag.CatNames)
                            {
                                <li class="list-group-item text-danger fw-bold fs-4 pt-0">@nombre</li>
                            }

                        </ul>
                    </div>
                </div>
            </div>
           
            
            
        </div>
        <div class="card-footer card-footer-danger">
            <form asp-action="Delete">
                <div class="form-group d-flex justify-content-between">
                    <input type="hidden" asp-for="Player_ID" />
                    <a asp-action="Index" class="btn btn-light"><i class="fa-solid fa-ban"></i> Cancelar</a>
                    <button type="submit" value="Borrar" class="btn btn-danger"><i class="fa-solid fa-delete-left"></i> Eliminar</button>
                </div>
            </form>
        </div>
    </div>
</div>
