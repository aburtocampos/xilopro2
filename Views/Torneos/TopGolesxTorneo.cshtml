@model IEnumerable<xilopro2.Models.PlayersGoals>
@{
    ViewData["Title"] = "Goleadores";
    var path = "/Content/Players/";
   // var path3 = "/Content/Teams/";
}

<div class="container py-3">
    <div class="d-flex justify-content-between align-items-center gap-2">
        <a asp-action="Details" asp-route-id="@(Model?.FirstOrDefault()?.torneoid == null ? ViewData["idtorneo"] : Model.FirstOrDefault().torneoid)" class="btn btn-outline-dark"><i class="fa-solid fa-arrow-left"></i> Atras</a>
        <h2 class="m-0 text-end">Top 10 Goleadores</h2>
    </div>
    <hr />
    <div class="col-md-8 mx-auto">
        <div class="card ">
            <div class="card-body">
                @if (Model.Count() > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-hover table-striped display" id="tblGoleadores">
                            <thead>
                                <tr>
                                    <th>
                                        
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Player_FullName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Player_Dorsal)
                                    </th>
                                  
                                    <th class="d-none d-md-table-cell">
                                        @Html.DisplayNameFor(model => model.Team_Image)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Goals)
                                    </th>

                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int counter = 1;
                                }
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td style="vertical-align: middle;" class="d-none d-md-table-cell fw-bold">
                                            @counter
                                        </td>
                                        <td style="vertical-align: middle;">
                                            <a asp-action="Details" asp-route-id="@item.PlayerId" asp-controller="Players" class="">
                                                <img src="@(!string.IsNullOrEmpty(item.Player_Image) ? Url.Content(path+item.Player_Image) : Url.Content("~/images/noimage.png"))" alt="Image" class="rounded playerimg" />
                                                @Html.DisplayFor(modelItem => item.Player_FullName)
                                            </a>
                                           
                                        </td>
                                        <td style="vertical-align: middle;" class="d-none d-md-table-cell fw-bold">
                                            @Html.DisplayFor(modelItem => item.Player_Dorsal)
                                        </td>
                                        <td style="vertical-align: middle;" class="d-none d-md-table-cell">
                                            <img src="@(!string.IsNullOrEmpty(item.Team_Image) ? Url.Content("/Content/Teams/"+item.Team_Image) : Url.Content("~/images/noimage.png"))" alt="Image" class="rounded teamlogo" />
                                            @Html.DisplayFor(modelItem => item.Team_Name)
                                        </td>

                                        <td style="vertical-align: middle;" class="d-none d-md-table-cell">
                                            @Html.DisplayFor(modelItem => item.Goals)
                                        </td>
                                    </tr>
                                    counter++;
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="card-body">
                        <div class="alert alert-warning" role="alert">
                            <i class="fa-solid fa-triangle-exclamation fa-lg me-2"></i> No hay goles registrados
                        </div>
                    </div>
                }
            </div>
            </div>
    </div>
</div>