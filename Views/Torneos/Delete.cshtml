@model xilopro2.Models.TorneoViewModel

@{
    ViewData["Title"] = "Delete";
    var path = "/Content/Tournaments/";
}

<div class="container pt-3">
  
    <div class="d-flex justify-content-between align-items-center gap-2">
        <a asp-action="Index" asp-route-id="@Model?.Torneo_ID" asp-controller="Torneos" class="btn btn-outline-dark"><i class="fa-solid fa-arrow-left"></i> Atras</a>
        <h3 class="m-0 text-end">Eliminando Torneo: <span class="badge bg-danger text-white text-uppercase">@Model.Torneo_Name - @Model.Torneo_SeasonType @Model.Torneo_Season</span></h3>
    </div>
    <hr />
    <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fw-bold d-flex align-items-center menser" role="alert">
        <i class="fa-solid fa-triangle-exclamation fa-2x"></i>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <div class="card border-danger" style="width: 100%;margin:0 auto;">
        <div class="card-body text-center">
            <h2 class="text-center">Confirme eliminar el Torneo: <span class="text-danger text-uppercase">@Model.Torneo_Name</span> ?</h2>
           
            <div class="form-group my-2">
                <img src="@(!string.IsNullOrEmpty(Model.Torneo_Image) ? Url.Content(path+Model.Torneo_Image) : Url.Content("~/images/noimage.png"))" class="img-fluid rounded imgsized0" alt="Image" />
            </div>
            <div class="form-group mb-2">
                <label class="form-check-label d-inline">Temporada:</label>
                <span class="badge bg-danger text-white text-uppercase d-inline">@Model.Torneo_Season</span>
            </div>
            <div class="form-group mb-0">
                <div class="d-flex justify-content-center flex-column">
                    <div class="estadoplayer">
                        <label class="form-check-label d-inline">Estado:</label>
                        @if (Model.Torneo_Status)
                        {
                            <h5 class="badge bg-success d-inline">Activo</h5>
                        }
                        else
                        {
                            <h5 class="badge bg-danger d-inline">Inactivo</h5>
                        }
                    </div>
                   
                </div>
            </div>
        </div>
        <div class="card-footer card-footer-danger">
            <form asp-action="Delete">
                <div class="form-group d-flex justify-content-between">
                    <input type="hidden" asp-for="Torneo_ID" />
                    <a asp-action="Index" asp-route-id="@Model?.Torneo_ID" asp-controller="Torneos" class="btn btn-light"><i class="fa-solid fa-ban"></i> Cancelar</a>
                    @if(Model.Torneo_Status == false){
                       <button type="submit" value="Borrar" class="btn btn-danger"><i class="fa-solid fa-delete-left"></i> Eliminar</button>
                    }
                </div>
            </form>
        </div>
    </div>
</div>