@model xilopro2.Models.GroupDetailViewModel

@{
    ViewData["Title"] = "Edit";
}
<link rel="stylesheet" href="~/css/User.css" asp-append-version="true" />

<div class="container pt-3">
    <div class="d-flex justify-content-between align-items-center gap-2">
        <a asp-action="DetailsGroup" asp-route-id="@Model?.GroupId" asp-controller="Torneos" class="btn btn-outline-dark"><i class="fa-solid fa-arrow-left"></i> Atras</a>
        <h3 class="m-0 text-end">Editando Datos de Partido del Grupo <span class="badge bg-dark">@Model.GroupName</span></h3>
    </div>
    <hr />
    <div class="card border-warning" style=" width: 100%;margin:0 auto;">
        <form asp-action="EditGroupDetail" enctype="multipart/form-data">
            <div class="card-body">
                <div class="row justify-content-center">
                    <partial name="_FormGroupDetail" />
                </div>
            </div>
            <div class="card-footer card-footer-warning">
                <div class="form-group d-flex justify-content-between">
                    <a asp-action="DetailsGroup" asp-route-id="@Model?.GroupId" asp-controller="Torneos" class="btn btn-light"><i class="fa-solid fa-ban"></i> Cancelar</a>
                    <button type="submit" value="Save" class="btn btn-warning"><i class="fa-regular fa-floppy-disk"></i> Guardar</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
