@model xilopro2.Data.Entities.Torneo

@{
    ViewData["Title"] = "Details";
    var path = "/Content/Tournaments/";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />

<h2>Details</h2>

<div>
    <h4>Tournament</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Torneo_Name)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Torneo_Name)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Torneo_StartDateLocal)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Torneo_StartDateLocal)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Torneo_EndDateLocal)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Torneo_EndDateLocal)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Torneo_Status)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Torneo_Status)
                </dd>
                <dt>
                    # Groups
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Groups.Count)
                </dd>
            </dl>
        </div>
        <div class="col-md-4">
            <span class="fw-bold d-block">Imagen:</span>
            <img src="@(!string.IsNullOrEmpty(Model.Torneo_Image) ? Url.Content(path+Model.Torneo_Image) : Url.Content("~/images/noimage.png"))" class="rounded" alt="Image" style="width:300px;height:300px;max-width: 100%; height: auto;" />
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Torneo_ID" class="btn btn-warning">Edit</a>
    <a asp-action="AddGroup" asp-route-id="@Model.Torneo_ID" class="btn btn-primary">Add Group</a>
    <a asp-action="Index" class="btn btn-success">Back to List</a>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Groups</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Torneo_Name)
                            </th>
                            <th>
                                # Teams
                            </th>
                            <th>
                                # Matches
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Groups.OrderBy(g => g.Group_Name))
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Group_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GroupDetails.Count)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Matches.Count)
                                </td>
                                <td>
                                    <a asp-action="EditGroup" asp-route-id="@item.Group_ID" class="btn btn-warning"><i class="glyphicon glyphicon-pencil"></i></a>
                                    <a asp-action="DetailsGroup" asp-route-id="@item.Group_ID" class="btn btn-info"><i class="glyphicon glyphicon glyphicon-align-justify"></i></a>
                                    <button data-id="@item.Group_ID" class="btn btn-danger deleteItem" data-toggle="modal" data-target="#deleteDialog"><i class="glyphicon glyphicon-trash"></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<partial name="_DeleteDialog" />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable();

            // Delete item
            var item_to_delete;

            $('.deleteItem').click((e) => {
                item_to_delete = e.currentTarget.dataset.id;
            });

            $("#btnYesDelete").click(function () {
                window.location.href = '/Teams/DeleteGroup/' + item_to_delete;
            });
        });
    </script>
}

