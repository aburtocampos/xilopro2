@model xilopro2.Models.UserViewModel

<div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show"></div>

<input type="hidden" asp-for="Id" />
<input type="hidden" asp-for="Categories" />
<input type="hidden" asp-for="UserType" />


<div class="d-flex justify-content-between align-items-center">
    <a asp-action="Profile" asp-route-id="@Model?.Email" class="btn btn-outline-default fs-4"><i class="fa-solid fa-arrow-left"></i> Atras | Mi Usuario:</a>
    <span class="badge text-bg-warning fs-4">@Model.Email</span>
</div>

<hr />
<div class="container">
    <div class="card border-warning" style="width: 80%;margin:0 auto;">
        <form asp-action="EditProfile" enctype="multipart/form-data">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <figure>
                            <img src="Model.User_Image" alt="Imagen de Perfil" />
                        </figure>
                        <input asp-for="FotoFile" class="form-control" placeholder="..." type="file" accept="image/*" onchange="document.getElementById('porfilePicture').src=window.URL.createObjectURL(this.files[0])" />
                        <span asp-validation-for="FotoFile" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-2">
                            <label asp-for="User_FirstName" class="control-label"></label>
                            <input asp-for="User_FirstName" class="form-control" placeholder="Primer Nombre" />
                            <span asp-validation-for="User_FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="User_LastName" class="control-label"></label>
                            <input asp-for="User_LastName" class="form-control" placeholder="Primer Apellido" />
                            <span asp-validation-for="User_LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="PhoneNumber" class="control-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="0000-0000" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="User_Address" class="control-label"></label>
                            <input asp-for="User_Address" class="form-control" placeholder="Dirección..." />
                            <span asp-validation-for="User_Address" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="col-md-6">

                        <div class="form-check mb-2">
                            <label asp-for="Status" class="form-check-label"></label>
                            <input asp-for="Status" class="form-check-input" type="checkbox" />
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-2">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="email@mail.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-2">
                            <label asp-for="User_Cedula" class="control-label"></label>
                            <input asp-for="User_Cedula" class="form-control" placeholder="XXX-XXXXXX-XXXXXX" />
                            <span asp-validation-for="User_Cedula" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-2">
                            <label asp-for="UserTypeof" class="control-label"></label>
                            <select asp-for="UserTypeof" asp-items="Model.UserType" class="form-select"></select>
                            <span asp-validation-for="UserTypeof" class="text-danger"></span>
                        </div>
                        @*@foreach (var item in Model.UserType.Where(ur=>ur.Value != "0"))
                        {
                        <div class="form-group mb-2">
                        <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" value="@item.Selected" >
                        <label class="form-check-label" for="flexSwitchCheckDefault">@item.Text</label>
                        </div>
                        </div>
                        }


                        <div class="form-group mb-2">
                            <label asp-for="Categoryid" class="control-label"></label>
                            <select asp-for="Categoryid" asp-items="Model.Categories" class="form-select"></select>
                            <span asp-validation-for="Categoryid" class="text-danger"></span>
                        </div>*@



                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="form-group d-flex justify-content-between">
                    <a asp-action="Profile" asp-route-id="@Model?.Email" class="btn btn-outline-default"><i class="fa-solid fa-ban"></i> Cancelar</a>
                    <button type="submit" value="Save" class="btn btn-success"><i class="fa-regular fa-floppy-disk"></i> Guardar</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}