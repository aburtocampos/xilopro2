@model IEnumerable<xilopro2.Data.Entities.Category>

@{
    ViewData["Title"] = "Categorias";
}

<div class="container pt-4">
    <partial name="_Notifications">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading d-flex justify-content-between align-content-center mb-2">
                    <h3 class="panel-title">Categorias</h3>
                    <a asp-action="Create" class="btn btn-success"><i class="fa-solid fa-plus"></i> Crear Nueva Categoria</a>
                </div>
                <hr/>
                <div class="panel-body">
                    <div class="table-responsive">
                    <table class="table table-hover  table-striped" id="tblCategorias">
                        <thead>
                            <tr>

                                <th>
                                    @Html.DisplayNameFor(model => model.Category_Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Category_Status)
                                </th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td style="vertical-align: middle;">

                                        @Html.DisplayFor(modelItem => item.Category_Name)

                                    </td>
                                    <td style="vertical-align: middle;">
                                        @if (item.Category_Status)
                                        {
                                            <i class="fa-solid fa-thumbs-up text-success"></i>
                                        }
                                        else
                                        {
                                            <i class="fa-solid fa-thumbs-down text-danger"></i>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group">
                                        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Category_ID"><i class="fa-regular fa-pen-to-square"></i> <span class="d-none d-sm-inline-block">Editar</span></a>
                                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Category_ID"><i class="fa-solid fa-delete-left"></i> <span class="d-none d-sm-inline-block">Eliminar</span></a>
                                            </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblCategorias').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.12.1/i18n/es-MX.json"
                },
                "aLengthMenu": [
                    [5, 25, 50, 100, 200, -1],
                    [5, 25, 50, 100, 200, "Todos"]
                ]
            })
        })
    </script>
}
